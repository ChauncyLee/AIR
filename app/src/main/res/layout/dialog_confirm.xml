<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_confirm_top_style"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/application_white"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/application_green"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/application_line_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/application_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/application_text_gray"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_confirm_bottom_style"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:background="@drawable/button_corner_gray"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/application_white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/commit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:background="@drawable/button_corner_green"
            android:gravity="center"
            android:text="@string/commit"
            android:textColor="@color/application_white"
            android:textSize="17sp" />

    </RelativeLayout>

</LinearLayout>